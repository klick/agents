{% extends "_layouts/cp" %}

{% set title = "Agents Settings" %}
{% set selectedSubnavItem = "settings" %}

{% block content %}
  <h1>Settings</h1>
  <p class="text-sm text-muted">Control runtime behavior for API availability, discovery files, and manual fallback options.</p>

  <form method="post" accept-charset="UTF-8">
    {{ csrfInput() }}
    {{ actionInput('agents/dashboard/save-settings') }}
    {{ redirectInput('agents/settings') }}

    {% include 'agents/settings' %}

    <button class="btn submit" type="submit">Save</button>
  </form>
{% endblock %}
