{% extends "_layouts/cp" %}

{% set title = "Agents" %}
{% set selectedSubnavItem = "dashboard" %}

{% block content %}
  <h1>Agents</h1>
  <p class="text-sm text-muted">Initial production-ready shell with readiness/health endpoints and diagnostics.</p>
  <div class="border rounded p-3">
    <dl class="mb-0">
      <div class="mb-2"><dt class="font-semibold">Version</dt><dd>{{ readinessVersion }}</dd></div>
      <div class="mb-2"><dt class="font-semibold">Build</dt><dd>{{ buildDate }}</dd></div>
      <div><dt class="font-semibold">Status</dt><dd>{{ status }}</dd></div>
    </dl>
  </div>

  <h2 class="h3 mt-4">Readiness Snapshot</h2>
  <pre class="border rounded p-3">{{ summaryJson|raw }}</pre>
{% endblock %}
